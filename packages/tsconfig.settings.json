{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["ES2017", "ES7", "ES2018", "ES2020", "DOM"]
  },
  "exclude": ["node_modules", "lib"]
}
